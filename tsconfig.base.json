{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@intuition/core": ["packages/core/src/index.ts"],
      "@intuition/1ui": ["packages/1ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
