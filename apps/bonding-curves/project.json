{
  "name": "@0xintuition/bonding-curves",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bonding-curves",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/bonding-curves"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@0xintuition/bonding-curves:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@0xintuition/bonding-curves:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@0xintuition/bonding-curves:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/bonding-curves"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/bonding-curves"
      }
    }
  },
  "tags": []
}
