{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"],
      "styles/*": ["styles/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.*", "**/*.test.*"]
}
